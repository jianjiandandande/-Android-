<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back"
    android:weightSum="1">

    <RelativeLayout
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@drawable/textview_border"
        android:weightSum="1">

        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:text="教师号:"
            android:gravity="center"
            android:textSize="20sp"/>
        <TextView
            android:layout_marginLeft="130dp"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/text_num_teacher"
            android:textSize="20sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/textview_border"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:text="姓名:"
            android:gravity="center"
            android:textSize="20sp"/>
        <TextView
            android:layout_marginLeft="130dp"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/text_name_teacher"
            android:textSize="20sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/textview_border"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:text="性别:"
            android:gravity="center"
            android:textSize="20sp"/>
        <TextView
            android:layout_marginLeft="130dp"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/text_sex_teacher"
            android:textSize="20sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/textview_border"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:text="联系电话:"
            android:gravity="center"
            android:textSize="20sp"/>

        <TextView
            android:layout_marginLeft="130dp"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/text_tel_teacher"
            android:textSize="20sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="30dp">
        <Button
            android:id="@+id/teacher_update_info"
            android:layout_width="150dp"
            android:layout_marginLeft="20dp"
            android:layout_height="match_parent"
            android:background="#fc6bbd"
            android:text="修改资料"
            android:textColor="#FFFFFFFF"
            android:textSize="18sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="24dp"/>

        <Button
            android:id="@+id/teacher_update_password"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:background="#fc6bbd"
            android:text="修改密码"
            android:textColor="#FFFFFFFF"
            android:textSize="18sp"
            android:layout_marginEnd="24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/teacher_update_grade"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:background="#fc6bbd"
            android:text="上传成绩"
            android:textColor="#FFFFFFFF"
            android:textSize="18sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

</LinearLayout>
